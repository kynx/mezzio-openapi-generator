{
    "name": "kynx/mezzio-openapi-generator",
    "description": "Generate a Mezzio application from an OpenAPI specification",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "mezzio",
        "openapi",
        "psr-15"
    ],
    "authors": [
        {
            "name": "Matt Kynaston",
            "email": "matt@kynx.org"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laminas": {
            "config-provider": "Kynx\\Mezzio\\OpenApiGenerator\\ConfigProvider"
        }
    },
    "require": {
        "php": "~8.3.0 || ~8.4.0 || ~8.5.0",
        "ext-fileinfo": "*",
        "composer-runtime-api": "^2.2",
        "kynx/code-utils": "^2.4",
        "kynx/mezzio-authentication-apikey": "^1.3",
        "kynx/mezzio-openapi": "^0.8",
        "laminas/laminas-cli": "^1.11",
        "laminas/laminas-diactoros": "^3.6",
        "laminas/laminas-filter": "^2.41",
        "mezzio/mezzio-authentication-basic": "^1.9",
        "nette/php-generator": "^4.2"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^3.1",
        "phpunit/phpunit": "^12.5",
        "psalm/plugin-phpunit": "^0.19.5",
        "roave/security-advisories": "dev-master",
        "vimeo/psalm": "^6.14.2"
    },
    "autoload": {
        "psr-4": {
            "Kynx\\Mezzio\\OpenApiGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KynxTest\\Mezzio\\OpenApiGenerator\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --shepherd --stats",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
